.post-container{
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #fff;
  border-bottom: 1px solid #ededed;
  border-top:1px solid #ededed;
  padding-bottom: 5px;
}
.avator-time{
  margin:10rpx 0 20rpx 20rpx;
}
.avatar{
  width:55rpx;
  height:55rpx;
  vertical-align: middle;
}
.time{
  font-size:20rpx;
  margin-left:20rpx;
  vertical-align: middle;
}
.post-title{
  font:bold 30rpx "微软雅黑";
  margin:0 0 10px 10px;
  color:#333;
}

.post-image{
  margin-left:16px;
  width:100%;
  height:350rpx; 
  margin:auto 0;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin:5px 0rpx 20rpx 0;
  letter-spacing: 2px;
  line-height: 40rpx;
  text-indent: 20rpx;
}

.post-like{
  font-size:13px;
  flex-direction: row;
  line-height: 16px;
  margin-left:10px;
}

.post-like-image{
  width:16px;
  height:16px;
  margin-right:8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right:20px;
}